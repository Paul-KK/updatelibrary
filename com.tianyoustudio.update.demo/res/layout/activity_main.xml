<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tianyoustudio.update.demo.MainActivity" >

    <Button
        android:id="@+id/update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="forceUpdate"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/goto2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="打开第2个Activity"
        android:textAllCaps="false" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" >

        <RadioButton
            android:id="@+id/radio_autocheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="autocheck/自动检测更新" />

        <RadioButton
            android:id="@+id/radio_wifiautocheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="wifiautocheck/WiFi下自动检测更新" />

        <RadioButton
            android:id="@+id/radio_autodown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="autodown/自动下载更新" />

        <RadioButton
            android:id="@+id/radio_wifiautodown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="wifiautodown/WiFi下自动下载更新" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="这是第1个Activity"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/currentVersionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:text="currentVersionName" />

    <TextView
        android:id="@+id/currentVersionCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="currentVersionCode" />

</LinearLayout>